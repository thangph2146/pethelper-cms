{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "paths": {
    "@/*": ["./src/*"],
    "@config/*": ["./src/config/*"],
    "@models/*": ["./src/models/*"],
    "@controllers/*": ["./src/controllers/*"],
    "@services/*": ["./src/services/*"],
    "@utils/*": ["./src/utils/*"],
    "@middlewares/*": ["./src/middlewares/*"],
    "@routes/*": ["./src/routes/*"],
    "@types/*": ["./src/types/*"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
} 