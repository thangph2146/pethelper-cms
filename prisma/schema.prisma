datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Define your models here
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  phone         String?
  role          String    @default("user")
  status        String    @default("active")
  loginAttempts Int       @default(0)
  lockUntil     DateTime?
  lastLoginAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]

  @@index([email])
  @@index([status])
  @@index([role])
}

model Session {
  id           String    @id @default(cuid())
  userId       String
  token        String    @unique
  deviceInfo   String?
  lastActivity DateTime  @default(now())
  expiresAt    DateTime
  createdAt    DateTime  @default(now())
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
}

enum UserRole {
  ADMIN
  USER
}

enum UserStatus {
  ACTIVE
  BANNED
  PENDING
}